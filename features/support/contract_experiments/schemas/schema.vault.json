{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Vault",
    "type": "object",
    "properties": {
        "contents": {
          "$ref": "./schema.expression.json"
        },
        "lock_key": {
          "oneOf":[
            {"$ref": "./schema.sym_key.json"},
            {"$ref": "./schema.asym_key.json"}
          ]
        },
        "unlock_key": {
          "oneOf":[
            {"$ref": "./schema.sym_key.json"},
            {"$ref": "./schema.asym_key.json"}
          ]
        },
        "ciphertext": {
            "type": "string"
        }
    },
    "required": ["contents", "lock_key", "unlock_key","ciphertext"]
}
